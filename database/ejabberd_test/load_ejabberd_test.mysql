# database/ejabberd_test/load_ejabberd_test.mysql
#
# seeds MySQL database ejabberd_test according to the tabular data files:
#
# 	- database/ejabberd_test/users.csv

CREATE DATABASE ejabberd_test;

USE ejabberd_test;

CREATE TABLE users(id INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
	name CHAR(7),
	password CHAR(11));

LOAD DATA INFILE '/Users/Reid/lifesize/mysql_seed/database/ejabberd_test/users.csv'
	IGNORE INTO TABLE users
	FIELDS TERMINATED BY ','
	       ENCLOSED BY   ''
	       ESCAPED BY    '\\'
	LINES  STARTING BY   ''
	       TERMINATED BY '\n'
	IGNORE 17 LINES;